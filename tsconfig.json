{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "dist/src/main",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": false,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true
    },
    "exclude": [
      "../node_modules"
    ],
    "include": [
      "src/main/**/*.ts",
      "src/main/**/*.json"
    ]
  }
  